<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/content_background_color" >

	<com.zykj.xishuashua.view.MyCommonTitle
        android:id="@+id/aci_mytitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
	
	<!-- 用户信息 -->
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="@color/white"
	   	style="@style/ui_backgrounlayoutstyle" >
	    <LinearLayout 
	        android:layout_width="fill_parent"
			android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:gravity="center_vertical">
	        <TextView 
	            android:text="@string/user_avatar"
		        android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
	        <View 
		        android:layout_width="0.0dip"
				android:layout_height="fill_parent"
				android:layout_weight="1"/>
            <com.zykj.xishuashua.view.RoundImageView
                android:id="@+id/rv_me_avatar"
                android:layout_width="@dimen/seventy"
                android:layout_height="@dimen/seventy"
                android:layout_margin="@dimen/ten"
                android:background="@drawable/user_head_img"
                android:contentDescription="@string/app_name"/>
            <ImageView 
                android:contentDescription="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/my_right"/>
	    </LinearLayout>
	    <View 
	        android:layout_width="fill_parent"
	        android:layout_height="@dimen/one"
	        android:background="@color/lgrey"/>
	    <LinearLayout 
           	android:id="@+id/layout_age"
	        android:layout_width="fill_parent"
			android:layout_height="@dimen/forty"
	        android:orientation="horizontal"
	        android:gravity="center_vertical">
	        <TextView 
	            android:text="@string/user_age"
		        android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/user_age"
                android:text="@string/user_age"
                android:textColor="@color/edit_hint_color"
		        android:layout_width="0.0dip"
				android:layout_height="fill_parent"
				android:gravity="right|center_vertical"
				android:layout_weight="1"/>
            <ImageView 
                android:visibility="invisible"
                android:contentDescription="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten"
                android:src="@drawable/my_right"/>
	    </LinearLayout>
	    <View 
	        android:layout_width="fill_parent"
	        android:layout_height="@dimen/one"
	        android:background="@color/lgrey"/>
	    <LinearLayout 
           	android:id="@+id/layout_sex"
	        android:layout_width="fill_parent"
			android:layout_height="@dimen/forty"
	        android:orientation="horizontal"
	        android:gravity="center_vertical">
	        <TextView 
	            android:text="@string/user_sex"
		        android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/user_sex"
                android:text="@string/user_sex"
                android:textColor="@color/edit_hint_color"
		        android:layout_width="0.0dip"
				android:layout_height="fill_parent"
				android:gravity="right|center_vertical"
				android:layout_weight="1"/>
            <ImageView 
                android:visibility="invisible"
                android:contentDescription="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten"
                android:src="@drawable/my_right"/>
	    </LinearLayout>
	    <View 
	        android:layout_width="fill_parent"
	        android:layout_height="@dimen/one"
	        android:background="@color/lgrey"/>
	    <LinearLayout 
           	android:id="@+id/layout_address"
	        android:layout_width="fill_parent"
			android:layout_height="@dimen/forty"
	        android:orientation="horizontal"
	        android:gravity="center_vertical">
	        <TextView 
	            android:text="@string/user_address"
		        android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/user_address"
                android:text="@string/user_address"
                android:textColor="@color/edit_hint_color"
		        android:layout_width="0.0dip"
				android:layout_height="fill_parent"
				android:gravity="right|center_vertical"
				android:layout_weight="1"/>
            <ImageView 
                android:contentDescription="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten"
                android:src="@drawable/my_right"/>
	    </LinearLayout>
	</LinearLayout>
	<LinearLayout
       	android:id="@+id/layout_updpwd"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="@color/white"
	    android:layout_marginTop="@dimen/ten"
	   	style="@style/ui_backgrounlayoutstyle" >
	    <LinearLayout 
	    	android:background="@color/white"
	        android:layout_width="fill_parent"
			android:layout_height="@dimen/forty"
	        android:orientation="horizontal"
	        android:gravity="center_vertical">
	        <TextView 
	            android:text="@string/user_uptpwd"
		        android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
	        <View 
		        android:layout_width="0.0dip"
				android:layout_height="fill_parent"
				android:layout_weight="1"/>
            <ImageView 
                android:contentDescription="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten"
                android:src="@drawable/my_right"/>
	    </LinearLayout>
	</LinearLayout>
    <Button 
        android:id="@+id/app_login_out"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/thirty"
        android:layout_height="@dimen/forty_five"
        android:background="@drawable/bg_null_blue"
        android:textColor="@color/theme_color"
        android:gravity="center"
        android:text="@string/loginout"/>
</LinearLayout>