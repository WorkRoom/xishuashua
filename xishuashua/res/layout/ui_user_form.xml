<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/content_background_color" >

	<com.zykj.xishuashua.view.MyCommonTitle
        android:id="@+id/aci_mytitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
	
	<!-- 用户信息 -->
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="@color/white"
	   	style="@style/ui_backgrounlayoutstyle" >
	    <LinearLayout 
	        android:layout_width="fill_parent"
			android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:gravity="center_vertical">
	        <TextView 
	            android:text="@string/user_avatar"
		        android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
	        <View 
		        android:layout_width="0.0dip"
				android:layout_height="fill_parent"
				android:layout_weight="1"/>
            <ImageView
                android:id="@+id/rv_me_avatar"
                android:layout_width="@dimen/seventy"
                android:layout_height="@dimen/seventy"
                android:layout_margin="@dimen/ten"
                android:src="@drawable/user_head_img"
                android:background="@drawable/user_head_background"
                android:contentDescription="@string/app_name"/>
            <ImageView 
                android:contentDescription="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/my_right"/>
	    </LinearLayout>
	    <View 
	        android:layout_width="fill_parent"
	        android:layout_height="@dimen/one"
	        android:background="@color/lgrey"/>
	    <LinearLayout 
	        android:layout_width="fill_parent"
			android:layout_height="@dimen/forty"
	        android:orientation="horizontal"
	        android:gravity="center_vertical">
	        <TextView 
	            android:text="@string/user_age"
		        android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/user_age"
                android:text="@string/user_age"
                android:textColor="@color/edit_hint_color"
		        android:layout_width="0.0dip"
				android:layout_height="fill_parent"
				android:gravity="right|center_vertical"
				android:layout_weight="1"/>
            <ImageView 
                android:visibility="invisible"
                android:contentDescription="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten"
                android:src="@drawable/my_right"/>
	    </LinearLayout>
	    <View 
	        android:layout_width="fill_parent"
	        android:layout_height="@dimen/one"
	        android:background="@color/lgrey"/>
	    <LinearLayout 
	        android:layout_width="fill_parent"
			android:layout_height="@dimen/forty"
	        android:orientation="horizontal"
	        android:gravity="center_vertical">
	        <TextView 
	            android:text="@string/user_sex"
		        android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/user_sex"
                android:text="@string/user_sex"
                android:textColor="@color/edit_hint_color"
		        android:layout_width="0.0dip"
				android:layout_height="fill_parent"
				android:gravity="right|center_vertical"
				android:layout_weight="1"/>
            <ImageView 
                android:visibility="invisible"
                android:contentDescription="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten"
                android:src="@drawable/my_right"/>
	    </LinearLayout>
	    <View 
	        android:layout_width="fill_parent"
	        android:layout_height="@dimen/one"
	        android:background="@color/lgrey"/>
	    <LinearLayout 
	        android:layout_width="fill_parent"
			android:layout_height="@dimen/forty"
	        android:orientation="horizontal"
	        android:gravity="center_vertical">
	        <TextView 
	            android:text="@string/user_address"
		        android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/user_address"
                android:text="@string/user_address"
                android:textColor="@color/edit_hint_color"
		        android:layout_width="0.0dip"
				android:layout_height="fill_parent"
				android:gravity="right|center_vertical"
				android:layout_weight="1"/>
            <ImageView 
                android:contentDescription="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten"
                android:src="@drawable/my_right"/>
	    </LinearLayout>
	</LinearLayout>
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="@color/white"
	    android:layout_marginTop="@dimen/ten"
	   	style="@style/ui_backgrounlayoutstyle" >
	    <LinearLayout 
	    	android:background="@color/white"
	        android:layout_width="fill_parent"
			android:layout_height="@dimen/forty"
	        android:orientation="horizontal"
	        android:gravity="center_vertical">
	        <TextView 
	            android:text="@string/user_pwd"
		        android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/user_pwd"
	      	    android:layout_width="0.0dip"
	      	    android:layout_height="wrap_content"
				android:hint="@string/hint_password"
				android:layout_marginLeft="@dimen/ten"
                style="@style/edit_text"
                android:gravity="right"
	      	    android:inputType="textPersonName"
				android:layout_weight="1"/>
            <ImageView 
                android:visibility="invisible"
                android:contentDescription="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten"
                android:src="@drawable/my_right"/>
	    </LinearLayout>
	    <View 
	        android:layout_width="fill_parent"
	        android:layout_height="@dimen/one"
	        android:background="@color/lgrey"/>
	    <LinearLayout 
	    	android:background="@color/white"
	        android:layout_width="fill_parent"
			android:layout_height="@dimen/forty"
	        android:orientation="horizontal"
	        android:gravity="center_vertical">
	        <TextView 
	            android:text="@string/user_cfmpwd"
		        android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/user_cfmpwd"
	      	    android:layout_width="0.0dip"
	      	    android:layout_height="wrap_content"
				android:hint="@string/hint_password"
				android:layout_marginLeft="@dimen/ten"
                style="@style/edit_text"
                android:gravity="right"
	      	    android:inputType="textPersonName"
				android:layout_weight="1"/>
            <ImageView 
                android:visibility="invisible"
                android:contentDescription="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten"
                android:src="@drawable/my_right"/>
	    </LinearLayout>
	</LinearLayout>
    <Button 
        android:id="@+id/app_register_in"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/ten"
        android:layout_height="@dimen/thirty_five"
        android:background="@drawable/bg_null_blue"
        android:textColor="@color/theme_color"
        android:gravity="center"
        android:text="@string/next"/>
</LinearLayout>