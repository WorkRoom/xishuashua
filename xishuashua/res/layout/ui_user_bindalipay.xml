<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/content_background_color" >

	<com.zykj.xishuashua.view.MyCommonTitle
        android:id="@+id/aci_mytitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
	
	<!-- 订单详情 -->
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:focusable="true"
        android:focusableInTouchMode="true"
	   	style="@style/ui_backgrounlayoutstyle" >
	    <LinearLayout 
	        android:layout_width="fill_parent"
			android:layout_height="@dimen/forty"
	        android:orientation="horizontal"
	        android:gravity="center_vertical">
	        <TextView 
	            android:text="@string/user_alipay_username"
		        android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/user_cfmpwd"
	      	    android:layout_width="0.0dip"
	      	    android:layout_height="wrap_content"
				android:hint="@string/user_alipay_hint"
				android:layout_marginLeft="@dimen/ten"
                style="@style/edit_text"
                android:gravity="right"
	      	    android:inputType="textPersonName"
				android:layout_weight="1"/>
	    </LinearLayout>
	    <View 
	        android:layout_width="fill_parent"
	        android:layout_height="@dimen/one"
	        android:background="@color/lgrey"/>
	    <LinearLayout 
	        android:layout_width="fill_parent"
			android:layout_height="@dimen/forty"
	        android:orientation="horizontal"
	        android:gravity="center_vertical">
	        <TextView 
	            android:text="@string/user_pwd"
		        android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/user_pwd"
	      	    android:layout_width="0.0dip"
	      	    android:layout_height="wrap_content"
				android:hint="@string/hint_password"
				android:layout_marginLeft="@dimen/ten"
                style="@style/edit_text"
                android:gravity="right"
	      	    android:inputType="textPersonName"
				android:layout_weight="1"/>
	    </LinearLayout>
	</LinearLayout>
    <Button 
        android:id="@+id/app_register_in"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/ten"
        android:layout_height="@dimen/thirty_five"
        android:background="@drawable/bg_round_blue"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="@string/bind_true"/>
</LinearLayout>