<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/content_background_color"
	android:orientation="vertical">

	<com.zykj.xishuashua.view.MyCommonTitle
        android:id="@+id/aci_mytitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <com.zykj.xishuashua.view.XListView
        android:id="@+id/advert_listview"
        android:layout_width="match_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1"/>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="5dp"
        android:background="@color/content_background_color">
        <Button
            android:id="@+id/btn_delete"
            android:textColor="#FFF"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="@string/gift_delete"
            android:textSize="16sp"
            android:background="@drawable/bg_round_red"/>
    </RelativeLayout>
</LinearLayout>
