<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/content_background_color">

	<com.zykj.xishuashua.view.MyCommonTitle
        android:id="@+id/aci_mytitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
	
    <ScrollView 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="@dimen/ten"
        android:paddingRight="@dimen/ten">
        <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical">
            <TextView 
                android:id="@+id/setting_content"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:padding="@dimen/ten"
		        android:layout_marginTop="@dimen/ten"
		        android:background="@color/white"
		        android:textSize="@dimen/t_sixteen"
		        android:text="@string/index_news_content"/>
            <TextView 
                android:id="@+id/setting_link"
		        android:layout_width="fill_parent"
		        android:layout_height="@dimen/forty"
		        android:gravity="center_vertical"
		        android:text="@string/links"
		        android:textSize="@dimen/t_sixteen"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
