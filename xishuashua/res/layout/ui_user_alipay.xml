<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:background="@color/content_background_color" >
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center_horizontal"
	    android:orientation="vertical"
	    android:padding="@dimen/fifteen" >
	    <EditText 
	        android:id="@+id/aci_mobile"
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/fifty"
	        android:background="@drawable/bg_edit_blue"
	        android:hint="@string/alipay_mobile"
	        android:paddingLeft="@dimen/ten"
	        android:textColorHint="@color/text_light"/>
	    <EditText 
	        android:id="@+id/aci_name"
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/fifty"
	        android:background="@drawable/bg_edit_blue"
	        android:hint="@string/alipay_name"
	        android:layout_marginTop="@dimen/ten"
	        android:paddingLeft="@dimen/ten"
	        android:textColorHint="@color/text_light"/>
	    <EditText 
	        android:id="@+id/aci_money"
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/fifty"
	        android:background="@drawable/bg_edit_blue"
	        android:hint="@string/alipay_money"
	        android:layout_marginTop="@dimen/ten"
	        android:paddingLeft="@dimen/ten"
	        android:inputType="numberSigned"
	        android:textColorHint="@color/text_light"/>
	    <EditText 
	        android:id="@+id/aci_num"
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/fifty"
	        android:background="@drawable/bg_edit_blue"
	        android:hint="@string/alipay_num"
	        android:layout_marginTop="@dimen/ten"
	        android:paddingLeft="@dimen/ten"
	        android:inputType="numberSigned"
	        android:textColorHint="@color/text_light"/>
	    <TextView 
	        android:id="@+id/alipay_allow"
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/fifty"
	        android:gravity="center_vertical"
	        android:text="@string/alipay_allow"
	        android:textColor="@color/btn_dgrey"/>
	    <Button 
	        android:id="@+id/aci_submit"
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/thirty_five"
	        android:background="@drawable/bg_round_blue"
	        android:textColor="@color/white"
	        android:gravity="center"
	        android:text="@string/btn_alipay"/>
	    <TextView 
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/fifty"
	        android:gravity="center"
	        android:textColor="@color/grey"
	        android:text="@string/text_alipay"/>
	    
		<LinearLayout 
		    android:layout_width="wrap_content"
		    android:layout_height="@dimen/forty_five"
		    android:orientation="horizontal">
		    <Button 
		        android:id="@+id/go_advice"
		        android:layout_width="@dimen/one_hundred"
		        android:layout_height="@dimen/forty_five"
		        android:background="@drawable/bg_round_red"
		        android:textColor="@color/white"
		        android:gravity="center"
		        android:text="@string/go_advice"/>
		    <View 
		        android:layout_width="0.0dip"
		        android:layout_height="match_parent"
		        android:layout_weight="1"/>
		    <Button 
		        android:id="@+id/go_share"
		        android:layout_width="@dimen/one_hundred"
		        android:layout_height="@dimen/forty_five"
		        android:background="@drawable/bg_round_green"
		        android:textColor="@color/white"
		        android:gravity="center"
		        android:text="@string/go_share"/>
		</LinearLayout>
	</LinearLayout>
</ScrollView>